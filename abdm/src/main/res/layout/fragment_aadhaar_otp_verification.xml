<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_16dp"
    android:paddingBottom="@dimen/_16dp"
    tools:context=".features.ui.registration.AadhaarOtpVerificationFragment">

    <com.mukesh.OtpView
        android:id="@+id/otpBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:focusableInTouchMode="true"
        android:inputType="number"
        android:itemBackground="@color/fade_color"
        android:textColor="@color/colorPrimaryDark"
        app:OtpItemCount="6"
        app:OtpLineColor="@color/colorPrimaryDark"
        app:OtpViewType="rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123456" />


    <include
        android:id="@+id/btnVerifyOtp"
        layout="@layout/btn_solid_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        app:layout_constraintEnd_toEndOf="@+id/otpBox"
        app:layout_constraintStart_toStartOf="@+id/otpBox"
        app:layout_constraintTop_toBottomOf="@+id/otpBox" />

</androidx.constraintlayout.widget.ConstraintLayout>