<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.intelehealth.client">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature
        android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".IntelehealthApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notifications_black_24dp" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ActivePatientActivity"
            android:label="@string/title_activity_active_patient"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.HomeActivity" />
        </activity>
        <activity
            android:name=".PatientDetailActivity"
            android:label="@string/title_activity_patient_detail"
            android:parentActivityName=".ActivePatientActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.ActivePatientActivity" />
        </activity>
        <activity
            android:name=".VisitSummaryActivity"
            android:label="@string/title_activity_patient_summary"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" /></activity>
        <activity android:name=".ViewHistoryActivity" />
        <activity
            android:name=".SearchPatientActivity"
            android:label="@string/title_activity_search_patient"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.HomeActivity" />
        </activity>
        <activity
            android:name=".DiagnosticTestsSelectionActivity"
            android:label="@string/title_activity_diagnostic_tests_list"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".services.ClientService"
            android:exported="false" />
        <service
            android:name=".services.OpenMRSAccountAuthenticatorService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name=".TableExamActivity"
            android:exported="true"
            android:label="@string/title_activity_table_exam"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.FamilyHistoryActivity" />
        </activity>

        <activity
            android:name=".IdentificationActivity"
            android:label="@string/title_activity_identification"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.HomeActivity" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ComplaintNodeActivity"
            android:label="@string/title_activity_complaint_node"
            android:parentActivityName=".IdentificationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.IdentificationActivity" />
        </activity>
        <activity
            android:name=".QuestionNodeActivity"
            android:label="@string/title_activity_question_node"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PastMedicalHistoryActivity"
            android:label="@string/title_activity_patient_history"
            android:parentActivityName=".QuestionNodeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.QuestionNodeActivity" />
        </activity>
        <activity
            android:name=".FamilyHistoryActivity"
            android:label="@string/title_activity_family_history"
            android:parentActivityName=".PastMedicalHistoryActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.PastMedicalHistoryActivity" />
        </activity>
        <activity
            android:name=".PhysicalExamActivity"
            android:label="@string/title_activity_physical_exam"
            android:parentActivityName=".PastMedicalHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.PastMedicalHistoryActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.intelehealth.client.HomeActivity" />
        </activity>
        <activity
            android:name=".SetupActivity"
            android:label="@string/title_activity_setup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".camera.CameraActivity"
            android:label="@string/title_activity_camera"
            android:theme="@style/CameraActivityStyle">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TodayPatientActivity"
            android:label="@string/title_activity_today_patient"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <!-- Firebase Services-->
        <service android:name=".firebase_cloud_messaging.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".firebase_cloud_messaging.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name=".db.DelayedJobQueueProvider"
            android:authorities="io.intelehealth.client.db.DelayedJobQueueProvider"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name=".SearchSuggestionProvider"
            android:authorities="io.intelehealth.client.SearchSuggestionProvider"
            android:exported="false" />

        <service
            android:name=".sync.JobDispatchService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
    </application>

</manifest>