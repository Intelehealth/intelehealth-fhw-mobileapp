<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--
                <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        -->
        <item name="android:textViewStyle">@style/DefaultTextviewStyle</item>

        <item name="android:textColor">@color/primary_text</item>
        <!--
                <item name="buttonStyle">@style/RobotoButtonStyle</item>
        -->
        <item name="buttonStyle">@style/DefaultButtonStyle</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="textAppearanceLargePopupMenu">@style/AppTheme.TextAppearance.Popup</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- UI 2.0 -->
    <style name="AppThemeMaterialNew" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item><!--status bar-->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorError">@color/colorPrimaryDark2</item>
        <item name="colorPrimaryVariant">@color/colorPrimary2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="buttonStyle">@style/DefaultButtonStyle</item>

    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="CameraActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#5677FC</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato_medium</item>
        <item name="android:textSize">@dimen/edittext_textsize_16sp</item>
    </style>

    <style name="ScrollingPagerIndicator">
        <item name="spi_dotColor">@android:color/darker_gray</item>
        <item name="spi_dotSelectedColor">@android:color/darker_gray</item>
        <item name="spi_dotSize">6dp</item>
        <item name="spi_dotSelectedSize">10dp</item>
        <item name="spi_dotSpacing">8dp</item>
        <item name="spi_visibleDotCount">5</item>
        <item name="spi_visibleDotThreshold">2</item>
        <item name="spi_looped">false</item>
    </style>

    <style name="DatePicker.Theme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <!--UI2.0-->


    <style name="followup_info">
        <item name="android:textSize">
            @dimen/edittext_textsize_16sp
        </item>
        <item name="android:textColor">
            #7F7B92
        </item>
    </style>


    <style name="followup_date_txtv">
        <item name="android:textColor">
            #1B163A
        </item>
    </style>


    <style name="visitDetails_text">
        <item name="android:textColor">
            #1B163A
        </item>
    </style>

    <style name="DefaultButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/common_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>


    <style name="fu_detiails_date">
        <item name="android:textColor">
            #7F7B92
        </item>
    </style>

    <style name="DefaultTextviewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>


    <style name="details_head2">
        <item name="android:textColor">
            #7F7B92
        </item>
    </style>

    <style name="details_head1">
        <item name="android:textColor">
            @color/headline_text_color
        </item>

    </style>

    <style name="ExposedDropdownGrayBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/mtrl_textinput_default_box_stroke_color</item>
    </style>

    <style name="TextviewInputTitleStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:lineSpacingExtra">@dimen/common_title_line_spacing</item>
        <item name="android:letterSpacing">@dimen/common_title_letter_spacing</item>
        <item name="android:textSize">@dimen/common_label_text_size</item>
        <item name="android:textColor">@color/textColorGray</item>

    </style>

    <!-- UI2.0 -->
    <style name="NavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@color/colorPrimary</item>
        <item name="itemTextAppearanceInactive">@color/iconTintGrayBottomNav</item>
        <item name="itemTextColor">@color/textColorGray</item>

    </style>

    <style name="caption_fu_openmrsId">
        <item name="android:textColor">
            #7F7B92
        </item>
    </style>

    <style name="label_misc_txt_14sp">
        <item name="android:textColor">#B0ADBE</item>
    </style>

    <style name="label_16sp">
        <item name="android:textColor">
            #1B163A
        </item>
    </style>

    <style name="search_txt_enter">
        <item name="android:textColorHint">
            #EFE8FF
        </item>
    </style>

    <style name="label">
        <item name="android:textColor">
            #1B163A
        </item>
    </style>

    <style name="you_can_add">
        <item name="android:textColor">
            #1B163A
        </item>
    </style>

    <style name="caption">
        <item name="android:textColor">
            #7F7B92
        </item>
    </style>

    <style name="search_hint_text">
        <item name="android:textColor">
            #7F7B92
        </item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AutocompleteviewStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>

    </style>

    <style name="NavigationDrawerItemStyle" parent="AppTheme">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/nav_menus_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/nav_menus_line_spacing</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:layout_marginBottom">@dimen/nav_menus_margin_bottom</item>

    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">@color/colorPrimary2</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabSelectedTextColor">@color/textColorBlack</item>
        <item name="android:textAppearance">@style/TabLayoutTextStyle</item>

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/find_patient_hint_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
