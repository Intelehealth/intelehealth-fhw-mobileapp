                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_horizontal"
                    android:paddingVertical="10dp"
                    android:text="@string/confirm_button"
