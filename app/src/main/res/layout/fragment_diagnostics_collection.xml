<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.intelehealth.app.ayu.visit.diagnostics.viewmodel.DiagnosticsCollectionViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundWhite"
        tools:context=".ayu.visit.diagnostics.DiagnosticsCollectionFragmentK">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/button_skip_margin_start"
            android:layout_marginEnd="@dimen/button_skip_margin_end"
            android:layout_marginBottom="@dimen/button_skip_margin_bottom"
            android:background="@drawable/ui2_common_primary_bg"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:drawableTint="@color/iconTintWhite"
            android:lineHeight="@dimen/button_skip_line_height"
            android:paddingStart="@dimen/common_button_padding_left"
            android:paddingTop="@dimen/common_button_padding_top"
            android:paddingEnd="@dimen/common_button_padding_right"
            android:paddingBottom="@dimen/common_button_padding_bottom"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/common_button_text_size" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_vital_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_submit"
            android:padding="8dip"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_20">

                <LinearLayout
                    android:id="@+id/ll_patient_vital_block_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ll_glucose_random_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_glucose_random_lbl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="1sp"
                                android:text="@string/blood_glucose_random"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/common_label_text_size"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/etv_glucose_random"
                                style="@style/edittext_textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height_44dp"
                                android:layout_marginTop="@dimen/hamburger_margin_start"
                                android:background="@drawable/input_edittext_border"
                                android:hint="@string/glucose_fasting_eg"
                                android:inputType="number"
                                android:maxLength="3"
                                android:padding="@dimen/padding_10"
                                android:textColorHint="@color/edittext_hint_color"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_glucose_random_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/hamburger_margin_start"
                                android:lineSpacingExtra="0sp"
                                android:text="@string/this_field_is_mandatory"
                                android:textAppearance="@style/registr_error_msg"
                                android:textColor="@color/red"
                                android:textSize="@null"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ll_glusose_fasting_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_glusose_fasting_lbl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_16"
                                android:lineSpacingExtra="1sp"
                                android:text="@string/blood_glucose_fasting"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/common_label_text_size"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/etv_glucose_fasting"
                                style="@style/edittext_textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height_44dp"
                                android:layout_marginTop="@dimen/hamburger_margin_start"
                                android:background="@drawable/input_edittext_border"
                                android:hint="@string/glucose_fasting_eg"
                                android:inputType="number"
                                android:maxLength="3"
                                android:padding="@dimen/padding_10"
                                android:textColorHint="@color/edittext_hint_color"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_glucose_fasting_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/hamburger_margin_start"
                                android:lineSpacingExtra="0sp"
                                android:text="@string/this_field_is_mandatory"
                                android:textAppearance="@style/registr_error_msg"
                                android:textColor="@color/red"
                                android:textSize="@null"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ll_post_prandial_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_post_prandial_lbl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_16"
                                android:lineSpacingExtra="1sp"
                                android:text="@string/blood_glucose_post_prandial"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/common_label_text_size"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/etv_post_prandial"
                                style="@style/edittext_textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height_44dp"
                                android:layout_marginTop="@dimen/hamburger_margin_start"
                                android:background="@drawable/input_edittext_border"
                                android:hint="@string/glucose_post_prandial_eg"
                                android:inputType="number"
                                android:maxLength="3"
                                android:padding="@dimen/padding_10"
                                android:textColorHint="@color/edittext_hint_color"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/etv_post_prandial_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/hamburger_margin_start"
                                android:lineSpacingExtra="0sp"
                                android:text="@string/this_field_is_mandatory"
                                android:textAppearance="@style/registr_error_msg"
                                android:textColor="@color/red"
                                android:textSize="@null"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


