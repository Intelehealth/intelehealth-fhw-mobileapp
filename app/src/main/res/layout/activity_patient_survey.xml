<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.intelehealth.client.activities.patient_survey_activity.PatientSurveyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/padding_card_title_text"
            android:text="@string/exit_survey_label"
            android:textSize="@dimen/card_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/button_scale_1"
                android:tag="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:tint="@color/scale_1"
                app:srcCompat="@drawable/ic_scale_1"
                />

            <ImageButton
                android:id="@+id/button_scale_2"
                android:tag="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:tint="@color/scale_2"
                app:srcCompat="@drawable/ic_scale_2"
                />

            <ImageButton
                android:id="@+id/button_scale_3"
                android:tag="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:tint="@color/scale_3"
                app:srcCompat="@drawable/ic_scale_3"
                />

            <ImageButton
                android:id="@+id/button_scale_4"
                android:tag="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:tint="@color/scale_4"
                app:srcCompat="@drawable/ic_scale_4"
                />

            <ImageButton
                android:id="@+id/button_scale_5"
                android:tag="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:tint="@color/scale_5"
                app:srcCompat="@drawable/ic_scale_5"
                />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText_exit_survey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:freezesText="true"
                android:hint="@string/exit_survey_prompt"
                android:imeOptions="actionUnspecified"
                android:inputType="textCapSentences"
                android:singleLine="false"
                android:tag="@string/tag_optional" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_survey_skip"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/exit_survey_skip"
                android:textStyle="bold" />
            <Button
                android:id="@+id/button_survey_submit"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/exit_survey_submit"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
