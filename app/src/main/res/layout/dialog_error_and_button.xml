<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvParentTryAgainDialog"
    android:contentDescription="Try Again Dialog Parent CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    app:cardCornerRadius="@dimen/margin_16dp"
    app:cardElevation="@dimen/hamburger_margin_start">

    <RelativeLayout
        android:id="@+id/rlParentTryAgainDialog"
        android:contentDescription="Try Again Dialog Parent RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivIconTryAgainDialog"
            android:contentDescription="Try Again Dialog Icon ImageView"
            android:layout_width="@dimen/patregist_profileimg_icon"
            android:layout_height="@dimen/patregist_profileimg_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_32dp"
            android:src="@drawable/close_patient_svg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIconTryAgainDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24">

            <TextView
                android:id="@+id/tvTitleTryAgainDialog"
                android:contentDescription="Try Again Dialog Title TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="4sp"
                android:text="@string/patient_registered"
                android:textAppearance="@style/dialog_title"
                android:textStyle="bold"
                android:textColor="@null"
                android:textSize="@null" />

            <TextView
                android:id="@+id/tvSubtitleTryAgainDialog"
                android:contentDescription="Try Again Dialog Subtitle TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitleTryAgainDialog"
                android:layout_marginTop="@dimen/fu_margin_start"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:text="@string/does_patient_start_visit_now"
                android:textAppearance="@style/dialog_subtitle"
                android:textColor="@null"
                android:textSize="@null" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubtitleTryAgainDialog"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="@dimen/margin_32dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTryAgainDialog"
                    android:contentDescription="Try Again Dialog Button"
                    style="@style/positive_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ui2_common_primary_bg"
                    android:paddingHorizontal="@dimen/margin_32dp"
                    android:paddingVertical="@dimen/margin_20dp"
                    android:text="@string/try_again" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>