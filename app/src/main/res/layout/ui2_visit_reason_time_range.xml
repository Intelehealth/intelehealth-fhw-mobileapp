<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ayu.visit.reason.VisitReasonCaptureFragment">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hamburger_margin_start"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_number_range"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:background="@drawable/edittext_border"
                android:dropDownVerticalOffset="56dp"
                android:paddingVertical="@dimen/padding_10"
                android:paddingStart="@dimen/padding_5"
                android:paddingEnd="@dimen/padding_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/margin_12"
                android:contentDescription="@null"
                android:src="@drawable/ui2_ic_dropdown"
                android:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/hamburger_margin_start"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_duration_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_44dp"
                android:background="@drawable/edittext_border"
                android:dropDownVerticalOffset="56dp"
                android:paddingVertical="@dimen/padding_10"
                android:paddingStart="@dimen/padding_5"
                android:paddingEnd="@dimen/padding_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/margin_12"
                android:contentDescription="@null"
                android:src="@drawable/ui2_ic_dropdown"
                android:visibility="visible" />
        </FrameLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/ui2_common_button_bg_submit"
        android:drawablePadding="8dip"
        android:paddingHorizontal="@dimen/margin_16"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/card_content_normal_text_size" />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_toStartOf="@+id/btn_submit"
        android:background="@drawable/ui2_common_button_bg_submit"
        android:drawablePadding="8dip"
        android:paddingHorizontal="@dimen/margin_16"
        android:text="@string/skip"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/common_button_text_size"
        android:visibility="visible" />
</RelativeLayout>