<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="end"
    android:layout_alignParentEnd="true"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="50dp"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_5"
    android:layout_below="@+id/filter_icon"
    android:visibility="gone"
    tools:visibility="visible"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginVertical="@dimen/margin_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="All visits"
            android:layout_marginBottom="@dimen/margin_12"
            android:textSize="@dimen/fu_name_txt_size"
            android:textColor="@color/header_title_color"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/notifi_divider_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Priority visits"
            android:layout_marginTop="@dimen/margin_12"
            android:textSize="@dimen/fu_name_txt_size"
            android:textColor="@color/header_title_color"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>