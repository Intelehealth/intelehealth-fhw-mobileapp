                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/delivery_type_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFocalPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/focal_facility_for_this_pregnancy"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_focal_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!--                                    <Space-->
                    <!--                                        android:layout_width="10dp"-->
                    <!--                                        android:layout_height="10dp" />-->

                    <!--                                    <Spinner-->
                    <!--                                        android:id="@+id/spinner_focal_village"-->
                    <!--                                        android:layout_width="match_parent"-->
                    <!--                                        android:layout_height="wrap_content"-->
                    <!--                                        android:layout_marginStart="5dp"-->
                    <!--                                        android:layout_marginBottom="10dp"-->
                    <!--                                        android:visibility="gone" />-->


                    <LinearLayout
                        android:id="@+id/ll_pregnancy_block_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="@string/enter_block_name_other"
                            android:textSize="@dimen/card_content_sub_text_size" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_pregnancyblock_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/lato_regular"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/card_content_sub_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_facility_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="@string/what_was_the_name_of_the_facility"
                            android:textSize="@dimen/card_content_sub_text_size" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/facility_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/lato_regular"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/card_content_sub_text_size"
                            tools:visibility="visible" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

