                <LinearLayout
                    android:id="@+id/llSingleMultipleBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_was_this_a_single_multiple_births"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_singlemultiplebirths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/singlemultiplebirths_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                    <!--                        single/multiple-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="@string/txt_how_old_was_the_baby_when_he_she_died"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <EditText
                        android:id="@+id/edittext_babyagedied"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBabyGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_what_is_was_the_sex_of_the_baby"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_sexofbaby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/sexofbaby_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@string/was_this_pregnancy_planned"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Spinner
                    android:id="@+id/spinner_pregnancyplanned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/pregnancyplanned_en" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@string/txt_were_you_identified_as_a_high_risk_pregnancy_case"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Spinner
                    android:id="@+id/spinner_pregnancyhighriskcase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/highriskpregnancy_en" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llChildComplications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_were_any_complications_identified_at_the_time_of_delivery"

                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_pregnancycomplications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/complications_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

