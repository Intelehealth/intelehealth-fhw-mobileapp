            <LinearLayout
                android:id="@+id/pregnancy_questions_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="@string/txt_what_was_the_outcome_of_your_pregnancy"
                    android:textSize="@dimen/card_content_sub_text_size" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Spinner
                    android:id="@+id/spinner_outcomepregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/outcomepregnancy_en" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:id="@+id/llChildAlive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_is_the_child_alive"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_childalive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/childalive_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPreTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="@string/was_this_birth_pre_term_earlier_than_due_date_for_delivery"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_pre_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/child_pre_term_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_year_of_pregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="@string/txt_what_was_the_year_of_pregnancy_outcome"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <EditText
                        android:id="@+id/edittext_yearofpregnancy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:fontFamily="@font/lato_regular"
                        android:freezesText="true"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_months_pregnancy_last"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="@string/txt_how_many_months_did_this_pregnancy_last"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <EditText
                        android:id="@+id/edittext_monthspregnancylast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_months_being_pregnant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="@string/txt_how_many_months_have_you_been_pregnant"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <EditText
                        android:id="@+id/edittext_monthsbeingpregnant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDeliveryPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/txt_what_is_the_place_of_delivery"
                        android:textSize="@dimen/card_content_sub_text_size" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <Spinner
                        android:id="@+id/spinner_placeofdeliverypregnant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/placedelivery_en" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDeliveryType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
