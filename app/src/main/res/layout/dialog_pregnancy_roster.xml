                <!--                                    android:id="@+id/edittext_focalfacility"-->
                <!--                                    android:layout_width="match_parent"-->
                <!--                                    android:layout_height="wrap_content"-->
                <!--                                    android:hint="@string/txt_focal_facility_for_this_pregnancy" />-->

                <!-- <EditText
                    android:id="@+id/edittext_singlemultiplebirths"
