<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/info_item_searched_margin_bottom">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_video1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_more_videos_card_height"
        android:layout_weight="1"
        android:backgroundTint="@color/iconTintGrayBottomNav"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/common_card_corner_radius"
        app:cardElevation="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_searched_video_desc_margin_top"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/tv_common_line_spacing1"
        android:text="Treat mild fever at home"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/common_label_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/card_video1"
        android:layout_marginTop="@dimen/tv_searched_video_view_margin_top"
        android:background="@color/solidViewLightGray" />
</LinearLayout>