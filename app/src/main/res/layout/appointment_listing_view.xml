<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    app:cardCornerRadius="8dip"
    app:cardElevation="8dip"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dip">

        <TextView
            android:id="@+id/tv_patentName_openMRSID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="8dip"
            android:text="Mm Test15, 10V8N-1"
            android:textColor="@color/gray_6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_patentName_openMRSID"
            android:gravity="center"
            android:paddingHorizontal="8dip"
            android:text="18/12/2021 10:00 AM"
            android:textColor="@color/gray_4"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateTime"
            android:gravity="center"
            android:paddingHorizontal="8dip"
            android:text="Saturday"
            android:textColor="@color/gray_4"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDay"
            android:gravity="center"
            android:paddingHorizontal="8dip"
            android:text="Demo doctor1 , Neurologist"
            android:textColor="@color/intro_next"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDay"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingHorizontal="8dip"
            android:textColor="@color/green_vectr"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="@string/booked_txt" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>