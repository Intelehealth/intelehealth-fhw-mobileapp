<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.homeActivity.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.homeActivity.HomeActivity"
        tools:showIn="@layout/activity_home">

        <LinearLayout
            android:id="@+id/llFooterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/newPrimaryColor"
            android:minHeight="@dimen/footer_action_bar_height"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvPatientsMenu"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/common_padding"
                android:text="@string/add_patient_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text_size_1"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tvHelpMenu"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/common_padding"
                android:text="@string/Whatsapp_Help_Cardview"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text_size_1"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_baseline_help_24" />

            <TextView
                android:id="@+id/tvSyncMenu"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/common_padding"
                android:text="@string/sync"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text_size_1"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_baseline_cloud_sync_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBodyContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llFooterLayout"
            android:orientation="vertical"

            android:paddingVertical="@dimen/content_vertical_padding">

            <RelativeLayout
                android:paddingHorizontal="@dimen/content_horizontal_padding"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvActiveVisitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/active_visits"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_7"
                    android:textSize="@dimen/header_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tvEndShift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_shift"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:padding="@dimen/common_padding"
                    android:background="@drawable/round_corner_primary"
                    android:textSize="@dimen/header_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/body_element_vertical_margin"
                android:paddingHorizontal="@dimen/content_horizontal_padding">

                <ImageView
                    android:id="@+id/ivFilterAction"
                    android:layout_width="@dimen/button_min_height"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/round_corner_primary"
                    android:padding="@dimen/common_padding"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_filter_alt_24" />

                <EditText
                    android:id="@+id/etvSearchVisit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/ivFilterAction"
                    android:background="@drawable/round_corner_gray_stroke_light"
                    android:drawableStart="@drawable/ic_search_24dp"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:hint="@string/search_visits_hint"
                    android:inputType="text"
                    android:minHeight="@dimen/edit_box_min_height"
                    android:padding="@dimen/edit_box_content_padding"
                    android:textSize="@dimen/content_text_size"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvActiveVisits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/content_horizontal_padding_1"
                android:scrollbars="none"
                tools:itemCount="10"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/list_item_active_patient_ezazi" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/static_margin"
                android:gravity="center"
                android:text="Don't have any active visit! "
                android:textColor="@color/gray_3"
                android:textSize="@dimen/header_text_size"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>

    <!--<include layout="@layout/content_home" />-->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/newPrimaryColor"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>